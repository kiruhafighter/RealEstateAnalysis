@page
@model MyPropertiesModel
@{
    ViewData["Title"] = "My Properties";
}

<h1>My Properties</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

@if (Model.Properties.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>State</th>
                <th>Property Type</th>
                <th>Year Built</th>
                <th>Floor Area</th>
                <th>Price</th>
                <th>Status</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var property in Model.Properties)
        {
            <tr>
                <td>@property.Name</td>
                <td>@property.Country</td>
                <td>@property.PropertyType</td>
                <td>@property.YearBuilt</td>
                <td>@property.FloorArea</td>
                <td>@property.Price</td>
                <td>@property.PropertyStatus</td>
                <td>
                    <a href="/PropertyDetails/@property.Id" class="btn btn-info btn-sm">View Details</a>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(property.FirstImage))
                    {
                        <img src="@Url.Content(property.FirstImage)" alt="Property Image" class="img-thumbnail" />
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>You have no properties listed.</p>
}
