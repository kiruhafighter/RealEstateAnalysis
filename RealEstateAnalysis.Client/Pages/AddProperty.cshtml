@page
@model RealEstateAnalysis.Client.Pages.AddPropertyModel
@{
    ViewData["Title"] = "Add Property";
}

<h1>Add Property</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<form method="post" enctype="multipart/form-data" class="form-container">
    <div class="form-group mb-3">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="AddPropertyDto.Name" value="@Model.AddPropertyDto.Name" required />
    </div>
    <div class="form-group mb-3">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="AddPropertyDto.Address" value="@Model.AddPropertyDto.Address" required />
    </div>
    <div class="form-group mb-3">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="AddPropertyDto.Description" required>@Model.AddPropertyDto.Description</textarea>
    </div>
    <div class="form-group mb-3">
        <label for="County">County</label>
        <input type="text" class="form-control" id="County" name="AddPropertyDto.County" value="@Model.AddPropertyDto.County" required />
    </div>
    <div class="form-group mb-3">
        <label for="Country">Country</label>
        <input type="text" class="form-control" id="Country" name="AddPropertyDto.Country" value="@Model.AddPropertyDto.Country" required />
    </div>
    <div class="form-group mb-3">
        <label for="Locality">Locality</label>
        <input type="text" class="form-control" id="Locality" name="AddPropertyDto.Locality" value="@Model.AddPropertyDto.Locality" required />
    </div>
    <div class="form-group mb-3">
        <label for="Postcode">Postcode</label>
        <input type="text" class="form-control" id="Postcode" name="AddPropertyDto.Postcode" value="@Model.AddPropertyDto.Postcode" required />
    </div>
    <div class="form-group mb-3">
        <label for="PropertyTypeId">Property Type</label>
        <select class="form-control" id="PropertyTypeId" asp-for="AddPropertyDto.PropertyTypeId" asp-items="Model.PropertyTypes"></select>
    </div>
    <div class="form-group mb-3">
        <label for="NumberOfRooms">Number of Rooms</label>
        <input type="number" class="form-control" id="NumberOfRooms" name="AddPropertyDto.NumberOfRooms" value="@Model.AddPropertyDto.NumberOfRooms" required />
    </div>
    <div class="form-group mb-3">
        <label for="NumberOfFloors">Number of Floors</label>
        <input type="number" class="form-control" id="NumberOfFloors" name="AddPropertyDto.NumberOfFloors" value="@Model.AddPropertyDto.NumberOfFloors" />
    </div>
    <div class="form-group mb-3">
        <label for="YearBuilt">Year Built</label>
        <select class="form-control" id="YearBuilt" asp-for="AddPropertyDto.YearBuilt" asp-items="Model.Years"></select>
    </div>
    <div class="form-group mb-3">
        <label for="PlotArea">Plot Area</label>
        <input type="number" class="form-control" id="PlotArea" name="AddPropertyDto.PlotArea" value="@Model.AddPropertyDto.PlotArea" />
    </div>
    <div class="form-group mb-3">
        <label for="FloorArea">Floor Area</label>
        <input type="number" class="form-control" id="FloorArea" name="AddPropertyDto.FloorArea" value="@Model.AddPropertyDto.FloorArea" required />
    </div>
    <div class="form-group mb-3">
        <label for="Price">Price</label>
        <input type="number" class="form-control" id="Price" name="AddPropertyDto.Price" value="@Model.AddPropertyDto.Price" required />
    </div>
    <div class="form-group mb-3">
        <label for="PropertyStatusId">Property Status</label>
        <select class="form-control" id="PropertyStatusId" asp-for="AddPropertyDto.PropertyStatusId" asp-items="Model.PropertyStatuses"></select>
    </div>
    <div class="form-group mb-3">
        <label for="UploadImages">Upload Images</label>
        <input type="file" class="form-control" id="UploadImages" name="UploadImages" multiple />
    </div>
    <div class="button-container">
        <button type="submit" class="btn btn-primary">Add Property</button>
        <button type="submit" name="cancel" value="cancel" class="btn btn-secondary">Cancel</button>
    </div>
</form>

<style>
    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, .25);
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 16px;
        margin-right: 10px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        padding: 10px 20px;
        font-size: 16px;
    }

    .form-container {
        display: flex;
        flex-direction: column;
        max-width: 600px;
        margin: 0 auto;
    }

    .button-container {
        display: flex;
        justify-content: flex-start;
        margin-top: 15px;
    }
</style>