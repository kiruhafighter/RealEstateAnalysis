@page
@model RealEstateAnalysis.Client.Pages.RegistrationModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<form method="post" class="form-container">
    <div>
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="AddUserDto.Email" value="@Model.AddUserDto.Email" required pattern="^[\w\.-]+@@[\w\.-]+\.\w{2,4}$" />
        <span asp-validation-for="AddUserDto.Email" class="text-danger"></span>
    </div>
    <div>
        <label for="FirstName">First Name:</label>
        <input type="text" id="FirstName" name="AddUserDto.FirstName" value="@Model.AddUserDto.FirstName" required />
        <span asp-validation-for="AddUserDto.FirstName" class="text-danger"></span>
    </div>
    <div>
        <label for="LastName">Last Name:</label>
        <input type="text" id="LastName" name="AddUserDto.LastName" value="@Model.AddUserDto.LastName" required />
        <span asp-validation-for="AddUserDto.LastName" class="text-danger"></span>
    </div>
    <div>
        <label for="Password">Password:</label>
        <input type="password" id="Password" name="AddUserDto.Password" value="@Model.AddUserDto.Password" required />
        <span asp-validation-for="AddUserDto.Password" class="text-danger"></span>
    </div>
    <div>
        <label for="ConfirmPassword">Confirm Password:</label>
        <input type="password" id="ConfirmPassword" name="AddUserDto.ConfirmPassword" value="@Model.AddUserDto.ConfirmPassword" required />
        <span asp-validation-for="AddUserDto.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 50px;
    }

    .form-container {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-container h1 {
        text-align: center;
        margin-bottom: 30px;
    }

    .form-container label {
        font-weight: bold;
    }

    .form-container .form-control {
        border-radius: 5px;
    }

    .form-container .btn {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px;
        font-size: 16px;
        cursor: pointer;
        width: 100%;
    }

    .form-container .btn:hover {
        background-color: #0056b3;
    }

    .alert {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }
</style>