@page
@model RealEstateAnalysis.Client.Pages.AgentAccountDetailsModel
@{
    ViewData["Title"] = "Agent Account Details";
}

<h1>Agent Account Details</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

@if (Model.IsEditing)
{
    <form method="post">
        <div class="form-group mb-3">
            <label for="FirstName">First Name</label>
            <input type="text" class="form-control" id="FirstName" name="UpdateAgentInfoDto.FirstName" value="@Model.AgentDetails.FirstName" required />
            <span asp-validation-for="UpdateAgentInfoDto.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="LastName">Last Name</label>
            <input type="text" class="form-control" id="LastName" name="UpdateAgentInfoDto.LastName" value="@Model.AgentDetails.LastName" required />
            <span asp-validation-for="UpdateAgentInfoDto.LastName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="UpdateAgentInfoDto.Email" value="@Model.AgentDetails.Email" required pattern="^[\w\.-]+@@[a-zA-Z\d\.-]+\.[a-zA-Z]{2,4}$"/>
            <span asp-validation-for="UpdateAgentInfoDto.Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="PhoneNumber">Phone Number</label>
            <input type="text" class="form-control" id="PhoneNumber" name="UpdateAgentInfoDto.PhoneNumber" value="@Model.AgentDetails.PhoneNumber" required pattern="^\+?\d+$"/>
            <span asp-validation-for="UpdateAgentInfoDto.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="AgencyName">Agency Name</label>
            <input type="text" class="form-control" id="AgencyName" name="UpdateAgentInfoDto.AgencyName" value="@Model.AgentDetails.AgencyName" required/>
            <span asp-validation-for="UpdateAgentInfoDto.AgencyName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" name="cancel" value="cancel" class="btn btn-secondary">Cancel</button>
    </form>
}
else    
{
    @if (Model.AgentDetails != null)
    {
        <div class="card">
            <div class="card-header">
                Agent Information
            </div>
            <div class="card-body">
                <p><strong>First Name:</strong> @Model.AgentDetails.FirstName</p>
                <p><strong>Last Name:</strong> @Model.AgentDetails.LastName</p>
                <p><strong>Email:</strong> @Model.AgentDetails.Email</p>
                <p><strong>Email:</strong> @Model.AgentDetails.PhoneNumber</p>
                <p><strong>Email:</strong> @Model.AgentDetails.AgencyName</p>
            </div>
        </div>
        <form method="post">
            <button type="submit" name="edit" value="edit" class="btn btn-primary mt-3">Edit</button>
        </form>
    }
    else
    {
        <div class="alert alert-warning">
            Unable to load user details. Please try again later.
        </div>
    }
}

<style>
    .card {
        margin-top: 20px;
    }

    .card-header {
        font-weight: bold;
        background-color: #007bff;
        color: white;
    }

    .card-body {
        padding: 20px;
        background-color: #f8f9fa;
    }

    .alert {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        font-size: 1.2em;
    }

    .btn {
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>